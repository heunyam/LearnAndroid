<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingHorizontal="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/userinputEdittext"
        android:layout_width="95dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toStartOf="@+id/plusBotton"
        app:layout_constraintStart_toEndOf="@+id/numberTextview"
        app:layout_constraintTop_toBottomOf="@+id/numberTextview" />

    <Button
        android:id="@+id/minusBotton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="빼기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plusBotton"
        app:layout_constraintTop_toTopOf="@+id/userinputEdittext" />

    <Button
        android:id="@+id/plusBotton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더하기"
        app:layout_constraintEnd_toStartOf="@+id/minusBotton"
        app:layout_constraintStart_toEndOf="@+id/userinputEdittext"
        app:layout_constraintTop_toTopOf="@+id/userinputEdittext" />

    <TextView
        android:id="@+id/numberTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="304dp"
        android:text="Hello World"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/userinputEdittext"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
